{% extends 'layouts/_main' %}

{% block container %}
    <section>
        {% embed "components/columns" with {
            image: entry.image.one().url
        } %}
            {% block article %}
                <h1>
                    {{ entry.title }}
                </h1>

                <p>
                    {{ entry.description }}
                </p>
            {% endblock %}
        {% endembed %}
    </section>

    <section>
        {% set blocks = entry.dynamicContent.all() %}
        {% if blocks | length %}
            <section>
                {% for b in blocks %}
                    {% include "blocks/" ~ b.type %}
                {% endfor %}
            </section>
        {% endif %}
    </section>

{% endblock %}